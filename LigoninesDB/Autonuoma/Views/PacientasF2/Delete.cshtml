@model Org.Ktu.Isk.P175B602.Autonuoma.Models.PacientasF2.PacientasCE

@* this will also be used as page title in main layout *@
@{ ViewData["title"] = "Paciento šalinimas (F2)"; }

@* content header *@
<div class="main-content-header">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a 
			href="@Url.Action("Index")" 
			class="btn btn-outline-primary btn-sm"
		>
			<i class="fa-solid fa-angles-left"></i> Atgal į sarašą
		</a>
	</span>
</div>

@* content itself *@
<div class="main-content-ced">
@using( Html.BeginForm(FormMethod.Post, new { @class="entity-d" }) )
{
	@Html.AntiForgeryToken()

	<fieldset>
		<legend class="confirm-msg">Ar tikrai norite šalinti šį pacienta?</legend>

		<dl>
			<dt>@Html.DisplayNameFor(m => m.Pacientai.Asmens_Kod)</dt>
			<dd>@Html.DisplayFor(m => m.Pacientai.Asmens_Kod)</dd>

			<dt>@Html.DisplayNameFor(m => m.Pacientai.Vardas)</dt>
			<dd>@Html.DisplayFor(m => m.Pacientai.Vardas)</dd>
			
		</dl>

		<div class="buttons">
			<button
					formaction="@Url.Action("DeleteConfirm", new {id = Model.Pacientai.Asmens_Kod})"
					class="btn btn-danger"
					style="white-space: nowrap;"
			><i class="fa-solid fa-trash"></i> Šalinti</button>
		</div>			
		
	</fieldset>
}
</div>

@* content footer *@
<div class="main-content-footer">
	<span class="title"></span>
	<span class="actions">
		<a 
			href="@Url.Action("Index")" 
			class="btn btn-outline-primary btn-sm"
		>
			<i class="fa-solid fa-angles-left"></i> Atgal į sarašą
		</a>
	</span>
</div>